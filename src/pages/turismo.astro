<style>
  .manifesto {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    animation: fade-in-up linear;
    animation-timeline: view();
    animation-range-start: entry 20%;
    animation-range-end: entry 50%;
    animation-fill-mode: both;
  }
  .manifesto-imagen {
    text-align: center;
  }
  .manifesto-imagen img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }
  .manifesto.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  .manifesto-imagen {
    text-align: center;
  }

  .manifesto-imagen img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }
  .manifesto-contenido h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--pm-azul-oscuro);
    margin-bottom: 1rem;
  }

  .manifesto-contenido > p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    color: #555;
  }

  .manifesto-lista {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .manifesto-lista li {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem 1rem;
    border-radius: 12px;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease;
  }

  .manifesto-lista li:hover {
    background-color: #f4f8fa;
    transform: translateX(10px);
  }

  .manifesto-lista .icono {
    font-size: 2rem;
    line-height: 1;
    margin-top: 5px;
  }

  .manifesto-lista h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--pm-azul-oscuro);
    margin: 0 0 0.25rem 0;
  }

  .manifesto-lista p {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
    color: #666;
  }
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @media (max-width: 900px) {
    .manifesto {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    .manifesto-imagen {
      margin-bottom: 2rem;
    }
    .manifesto-imagen img {
      max-width: 250px;
    }
    .manifesto-lista li {
      text-align: left;
    }
    .manifesto-lista li:hover {
      transform: none;
    }
  }

  /* Rutas sections */
  .rutas-guiadas {
    max-width: 1200px;
    margin: 4rem auto;
    padding: 2rem;
  }

  .rutas-guiadas > h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--pm-azul-oscuro);
    text-align: center;
    margin-bottom: 3rem;
  }

  .rutas-section {
    margin-bottom: 4rem;
  }

  .rutas-subtitle {
    font-size: 2rem;
    font-weight: 600;
    color: var(--pm-azul-oscuro);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .subtitle-icon {
    font-size: 2.2rem;
  }

  .rutas-description {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .card-info {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .rutas-guiadas > h2 {
      font-size: 2rem;
    }

    .rutas-subtitle {
      font-size: 1.6rem;
      justify-content: center;
      text-align: center;
    }

    .rutas-description {
      text-align: center;
      font-size: 1rem;
    }

    .card-info {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
