---
import BaseLayout from "../layouts/BaseLayout.astro";
import RouteCard from "../components/RouteCard.astro";
import { getCollection } from "astro:content";

var theme = "box-shadow: inset 0 0 0 1000px var(--pm-azul-oscuro);";

// Get all routes and sort by type
const allRoutes = await getCollection("routes");
const culturalRoutes = allRoutes.filter(
  (route) => route.data.type === "cultural"
);
const hikingRoutes = allRoutes.filter(
  (route) => route.data.type === "senderismo"
);
---

