<style>
  .manifesto {
    display: grid;
    grid-template-columns: 1fr 1.2fr; 
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    animation: fade-in-up linear;
    animation-timeline: view();
    animation-range-start: entry 20%;
    animation-range-end: entry 50%;
    animation-fill-mode: both;
  }
  .manifesto-imagen {
    text-align: center;
  }
  .manifesto-imagen img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }
  .manifesto.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  .manifesto-imagen {
    text-align: center;
  }

  .manifesto-imagen img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }
  .manifesto-contenido h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--pm-azul-oscuro);
    margin-bottom: 1rem;
  }

  .manifesto-contenido > p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    color: #555;
  }

  .manifesto-lista {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .manifesto-lista li {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem 1rem;
    border-radius: 12px;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease;
  }

  .manifesto-lista li:hover {
    background-color: #f4f8fa;
    transform: translateX(10px);
  }

  .manifesto-lista .icono {
    font-size: 2rem;
    line-height: 1;
    margin-top: 5px;
  }

  .manifesto-lista h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--pm-azul-oscuro);
    margin: 0 0 0.25rem 0;
  }

  .manifesto-lista p {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
    color: #666;
  }
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @media (max-width: 900px) {
    .manifesto {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    .manifesto-imagen {
      margin-bottom: 2rem;
    }
    .manifesto-imagen img {
      max-width: 250px;
    }
    .manifesto-lista li {
      text-align: left;
    }
    .manifesto-lista li:hover {
      transform: none;
    }
  }
</style>
